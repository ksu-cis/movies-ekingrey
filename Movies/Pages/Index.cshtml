@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}




    <div class="content">
        <div class="results">
            <h1>Movies</h1>

            @foreach (Movie movie in Model.Movies)
            {
                <h2>@movie.Title (@movie.Year)</h2>
                <p>Rated @movie.MPAA_Rating</p>
                <div class="reviews">

                    <div>
                        Rotten Tomatos
                        <h3>@movie.Rotten_Tomatoes_Rating</h3>
                    </div>
                    <div>
                        IMDB
                        <h3>@movie.IMDB_Rating</h3>
                    </div>
                </div>

            }
        </div>

        <form method="post">
            <h4>Search</h4>
            <input type="text" name="search" value="@Model.search"/>
            <input type="submit" value="Search and Filter" />
            <input type="reset" value="Clear"/>
            <h4> Filter by Rating</h4>

            <div class="checkbox-list">

                <label>
                    <input name="rating" type="checkbox" value="G" checked="@Model.rating.Contains("G")"/>
                    Rated G
                </label>
                <label>
                    <input name="rating" type="checkbox" value="PG" checked="@Model.rating.Contains("PG")"/>
                    Rated PG
                </label>
                <label>
                    <input name="rating" type="checkbox" value="PG-13" checked="@Model.rating.Contains("PG-13")"/>
                    Rated PG-13
                </label>
                <label>
                    <input name="rating" type="checkbox" value="R" checked="@Model.rating.Contains("R")"/>
                    Rated R
                </label>
                <label>
                    <input name="rating" type="checkbox" value="NC-17" checked="@Model.rating.Contains("NC-17")"/>
                    Rated NC-17
                </label>

                <h4>Review Scores</h4>
                <label>
                    Minimum IMDB Rating
                    <input type="number" min="0" max="10" step="0.1" name="minIMDB" value="@Model.search"/>
                </label>
                <label>
                    Maximum IMDB Rating
                    <input type="number" min="0" max="10" step="0.1" name="maxIMDB" value="@Model.search"/>
                </label>

            </div>

        </form>
    </div>


